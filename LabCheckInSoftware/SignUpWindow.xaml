<Window x:Class="TWLogging.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TWLogging"
        mc:Ignorable="d"
        Title="TWLogging: Sign Up" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <Viewbox Grid.Row="0" Grid.Column="1" Stretch="Uniform">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="Sign Up" Height="auto" VerticalAlignment="Top"  Width="auto" HorizontalAlignment="Center"/>
                    <Line Grid.Row="1" X1="-1000" X2="1000" Stroke="Black" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200"/>
                </Grid>
            </Viewbox>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2.5*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0" Stretch="Uniform" HorizontalAlignment="Left">
                    <Label>
                        <TextBlock TextDecorations="Underline">User Agreement</TextBlock>
                    </Label>
                </Viewbox>
                <Viewbox x:Name="v" Grid.Row="1" Stretch="Uniform" VerticalAlignment="Top">
                    <TextBlock x:Name="UserAgreementText" TextWrapping="Wrap" FontSize="12" MinWidth="400" MinHeight="100" Text=""/>
                </Viewbox>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="5*"/>
                    </Grid.RowDefinitions>
                    <Viewbox Grid.Row="0" Stretch="Uniform">
                        <Label Content="Please Fill Out The Below Information:" HorizontalAlignment="Center"/>
                    </Viewbox>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Viewbox Grid.Row="0" Grid.Column="0" Stretch="Uniform" HorizontalAlignment="Right">
                            <Label Content="uID: " />
                        </Viewbox>
                        <Viewbox Grid.Row="0" Grid.Column="1" Stretch="Uniform" HorizontalAlignment="Left">
                            <TextBox x:Name="uIDBox" Text="" MinWidth="50" Margin="5,3,0,3" MaxLength="8"/>
                        </Viewbox>
                        <Viewbox Grid.Row="1" Grid.Column="0" Stretch="Uniform" HorizontalAlignment="Right">
                            <Label Content="First Name: " />
                        </Viewbox>
                        <Viewbox Grid.Row="1" Grid.Column="1" Stretch="Uniform" HorizontalAlignment="Left">
                            <TextBox x:Name="FirstNameBox" Text="" MinWidth="50" Margin="5,3,0,3"/>
                        </Viewbox>
                        <Viewbox Grid.Row="2" Grid.Column="0" Stretch="Uniform" HorizontalAlignment="Right">
                            <Label Content="Last Name: " />
                        </Viewbox>
                        <Viewbox Grid.Row="2" Grid.Column="1" Stretch="Uniform" HorizontalAlignment="Left">
                            <TextBox x:Name="LastNameBox" Text="" MinWidth="50" Margin="5,3,0,3"/>
                        </Viewbox>
                        <Viewbox Grid.Row="3" Grid.Column="0" Stretch="Uniform" HorizontalAlignment="Right">
                            <Label x:Name="InfoField1Label" Content="" />
                        </Viewbox>
                        <Viewbox Grid.Row="3" Grid.Column="1" Stretch="Uniform" HorizontalAlignment="Left">
                            <TextBox x:Name="InfoField1Box" Text="" MinWidth="50" Margin="5,3,0,3" IsEnabled="False"/>
                        </Viewbox>
                        <Viewbox Grid.Row="4" Grid.Column="0" Stretch="Uniform" HorizontalAlignment="Right">
                            <Label x:Name="InfoField2Label" Content="" />
                        </Viewbox>
                        <Viewbox Grid.Row="4" Grid.Column="1" Stretch="Uniform" HorizontalAlignment="Left">
                            <TextBox x:Name="InfoField2Box" Text="" MinWidth="50" Margin="5,3,0,3" IsEnabled="False"/>
                        </Viewbox>
                    </Grid>
                </Grid>
                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Grid.Row="1" Grid.Column="0" Stretch="Uniform">
                        <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click"/>
                    </Viewbox>
                    <Viewbox Grid.Row="1" Grid.Column="1" Stretch="Uniform">
                        <Button x:Name="AgreeButton" Content="Agree" Click="AgreeButton_Click"/>
                    </Viewbox>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>

<Window x:Class="TWLogging.LookupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TWLogging"
        mc:Ignorable="d"
        Title="TWLogging: Lookup" Height="450" Width="800"
        MouseMove="Window_MouseMove">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <Viewbox Grid.Row="0" Grid.Column="1" Stretch="Uniform">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="Lookup Window" Height="auto" VerticalAlignment="Top" Width="auto" HorizontalAlignment="Center"/>
                    <Line Grid.Row="1" X1="-1000" X2="1000" Stroke="Black" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200"/>
                </Grid>
            </Viewbox>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height=".4*"/>
                    <RowDefinition Height=".62*"/>
                    <RowDefinition Height=".5*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height=".5*"/>
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0" Stretch="Uniform" HorizontalAlignment="Center">
                    <Label Content="Enter either the User's Name, or their uID, then press 'Enter' for the User Lookup:"/>
                </Viewbox>
                <Viewbox Grid.Row="1" Stretch="Uniform" HorizontalAlignment="Center" >
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Viewbox Grid.Row="0" Grid.Column="0" Stretch="Uniform" HorizontalAlignment="Right">
                            <Label Content="uID: " />
                        </Viewbox>
                        <Viewbox Grid.Row="0" Grid.Column="1" Stretch="Uniform" HorizontalAlignment="Left">
                            <TextBox x:Name="uIDLookupBox" Text="" MinWidth="50" Margin="5,3,0,3" MaxLength="8"/>
                        </Viewbox>
                        <Viewbox Grid.Row="1" Grid.Column="0" Stretch="Uniform" HorizontalAlignment="Right">
                            <Label Content="First Name: " />
                        </Viewbox>
                        <Viewbox Grid.Row="1" Grid.Column="1" Stretch="Uniform" HorizontalAlignment="Left">
                            <TextBox x:Name="FirstNameLookupBox" Text="" MinWidth="50" Margin="5,3,0,3"/>
                        </Viewbox>
                        <Viewbox Grid.Row="2" Grid.Column="0" Stretch="Uniform" HorizontalAlignment="Right">
                            <Label Content="Last Name: " />
                        </Viewbox>
                        <Viewbox Grid.Row="2" Grid.Column="1" Stretch="Uniform" HorizontalAlignment="Left">
                            <TextBox x:Name="LastNameLookupBox" Text="" MinWidth="50" Margin="5,3,0,3"/>
                        </Viewbox>
                        
                    </Grid>
                </Viewbox>
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="1.5*"/>
                    </Grid.RowDefinitions>
                    <Viewbox Grid.Row="0" Stretch="Uniform" HorizontalAlignment="Center">
                        <Label x:Name="LookupSuccessLabel" Content=""/>
                    </Viewbox>
                    <Viewbox Grid.Row="1" Stretch="Uniform" HorizontalAlignment="Center">
                        <Label Content="Once User is found, the info fields below can be edited, then saved with pressing 'Enter'"/>
                    </Viewbox>
                </Grid>
                <Viewbox Grid.Row="3" Stretch="Uniform" HorizontalAlignment="Center" >
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Viewbox Grid.Row="0" Grid.Column="0" Stretch="Uniform" HorizontalAlignment="Right">
                            <Label Content="uID: " />
                        </Viewbox>
                        <Viewbox Grid.Row="0" Grid.Column="1" Stretch="Uniform" HorizontalAlignment="Left">
                            <TextBox x:Name="uIDBox" Text="" MinWidth="50" Margin="5,3,0,3" MaxLength="8"/>
                        </Viewbox>
                        <Viewbox Grid.Row="1" Grid.Column="0" Stretch="Uniform" HorizontalAlignment="Right">
                            <Label Content="First Name: " />
                        </Viewbox>
                        <Viewbox Grid.Row="1" Grid.Column="1" Stretch="Uniform" HorizontalAlignment="Left">
                            <TextBox x:Name="FirstNameBox" Text="" MinWidth="50" Margin="5,3,0,3"/>
                        </Viewbox>
                        <Viewbox Grid.Row="2" Grid.Column="0" Stretch="Uniform" HorizontalAlignment="Right">
                            <Label Content="Last Name: " />
                        </Viewbox>
                        <Viewbox Grid.Row="2" Grid.Column="1" Stretch="Uniform" HorizontalAlignment="Left">
                            <TextBox x:Name="LastNameBox" Text="" MinWidth="50" Margin="5,3,0,3"/>
                        </Viewbox>
                        <Viewbox Grid.Row="3" Grid.Column="0" Stretch="Uniform" HorizontalAlignment="Right">
                            <Label x:Name="InfoField1Label" Content="" />
                        </Viewbox>
                        <Viewbox Grid.Row="3" Grid.Column="1" Stretch="Uniform" HorizontalAlignment="Left">
                            <TextBox x:Name="InfoField1Box" Text="" MinWidth="50" Margin="5,3,0,3" IsEnabled="False"/>
                        </Viewbox>
                        <Viewbox Grid.Row="4" Grid.Column="0" Stretch="Uniform" HorizontalAlignment="Right">
                            <Label x:Name="InfoField2Label" Content="" />
                        </Viewbox>
                        <Viewbox Grid.Row="4" Grid.Column="1" Stretch="Uniform" HorizontalAlignment="Left">
                            <TextBox x:Name="InfoField2Box" Text="" MinWidth="50" Margin="5,3,0,3" IsEnabled="False"/>
                        </Viewbox>
                    </Grid>
                </Viewbox>
                <Grid Grid.Row="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Grid.Row="1" Grid.Column="0" Stretch="Uniform">
                        <TextBlock Text="You can close this page manually in the corner, or it will close automatically after 30 seconds of no interaction." TextWrapping="Wrap"/>
                    </Viewbox>
                    <Label Grid.Row="2" x:Name="TimerLabel" Content=""/>

                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
